// Prisma 스키마 파일
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 사용자 모델
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("일반사용자")
  status    String   @default("활성")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// 지출 내역 모델
model Expense {
  id          Int           @id @default(autoincrement())
  merchant    String
  date        DateTime
  totalAmount Float
  category    String?
  description String?
  items       ExpenseItem[]
  createdAt   DateTime      @default(now())

  @@map("expenses")
}

// 지출 항목 모델
model ExpenseItem {
  id        Int     @id @default(autoincrement())
  name      String
  amount    Float
  expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  expenseId Int

  @@map("expense_items")
}

// Task 모델
model Task {
  id        Int      @id @default(autoincrement())
  text      String
  done      Boolean  @default(false)
  userId    String
  createdAt DateTime @default(now())

  @@map("tasks")
}

